<Application x:Class="RegexVideoPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RegexVideoPlayer"
             StartupUri="Windows/RegexVideoPlayerWindow.xaml">
             <!--StartupUri="Windows/AnimeSelectionWindow.xaml">-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important-->
                <ResourceDictionary Source="Windows/Styles/Colors.xaml" />
                <ResourceDictionary Source="Windows/Styles/Fonts.xaml" />
                <ResourceDictionary Source="Windows/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Windows/Styles/Texts.xaml" />
                <ResourceDictionary Source="Windows/Styles/Windows.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <BitmapImage x:Key="naruto-shippuden" UriSource="Assets\shippuden.png"/>
            <BitmapImage x:Key="naruto-classic" UriSource="Assets\classic.png"/>
            <BitmapImage x:Key="boruto" UriSource="Assets\boruto.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
